{
	"name": "battlemap",
	"version": "1.0.0",
	"description": "A tool that maps the battles throughout European history.",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node dist/server.js",
		"dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
		"build": "yarn clean & tsc & yarn copy-static",
		"clean": "rimraf dist",
		"copy-static": "copyfiles -u 1 src/public/**/* dist & copyfiles -u 1 src/views/**/* dist",
		"format": "prettier --write src/",
		"format:check": "prettier --check src/"
	},
	"keywords": [],
	"author": "David Graham",
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.19.0",
		"dotenv": "^16.0.3",
		"ejs": "^3.1.6",
		"express": "^4.17.1",
		"express-session": "^1.17.3",
		"formidable": "v3",
		"geolib": "^3.3.3",
		"mongoose": "^6.8.0",
		"superagent": "^8.0.6",
		"typescript": "^4.9.4"
	},
	"devDependencies": {
		"@types/express": "^4.17.14",
		"@types/express-session": "^1.17.5",
		"@types/node": "^18.11.13",
		"@types/superagent": "^4.1.16",
		"concurrently": "^7.6.0",
		"copyfiles": "^2.4.1",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.1",
		"rimraf": "^3.0.2",
		"ts-node": "^10.9.1"
	}
}
