{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		// "esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*"]
}
