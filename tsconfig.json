{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*"]
}
