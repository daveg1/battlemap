<!DOCTYPE html>
<html lang="en-GB">
    <head>
        <%- include('./partials/head') %>
        <title>BattleMap</title>
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A==" crossorigin=""/>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link rel="stylesheet" href="/styles/map.css">
    </head>
    <body>
        <%- include('./partials/navbar.ejs', { isfloat: true }) %>
        <!-- Map generated by leaflet -->
        <div id="map"></div>

        <div id="country-name" class="country-name"></div>

        <article id="article-preview"></article>

        <!-- UI stuff -->
        <aside class="map-sidebar">
            <!-- <button id="toggleSidebar">Close</button> -->
            <section>
                <button id="theme-changer" class="button">Change theme</button>
            </section>
            <section class="tab-buttons">
                <button class="tab-button active" data-target="1">Place search</button>
                <button class="tab-button" data-target="2">Battle search</button>
            </section>
            <section class="tabs">
                <div class="tab active">
                    <form id="place-form" action="" method="post" autocomplete="off" spellcheck="false">
                        <div class="form-group">
                            <h3><label class="label" for="place">Place name</label></h3>
                            <input type="text" id="place" class="input" name="place" required placeholder="e.g. Berlin">
                        </div>
                        <div>
                            <p><small>You can also type the name of a country!</small></p>
                        </div>
                        <div class="form-group">
                            <h3><label for="radius">Radius (meters)</label></h3>
                            <input type="range" id="radius" name="radius" min="10000" max="400000" value="205000">
                            <div class="labels">
                                <span>10,000m</span>
                                <span>400,000m</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="label checkbox" for="does_clear"><input type="checkbox" id="does_clear" name="does_clear" checked> Clear map on search</label>
                        </div>
                        <div class="button-holder">
                            <button class="button">Search</button>
                        </div>
                    </form>
                    <section id="form-output"></section>
                </div>
                <div class="tab">
                    <form id="battle-form" action="" method="post" autocomplete="off" spellcheck="false">
                        <div class="form-group">
                            <h3><label class="label" for="battle">Name of battle</label></h3>
                            <input type="text" id="battle" class="input" name="battle" required placeholder="e.g. Battle of Berlin">
                        </div>
                        <div>
                            <p><small>Omitting "battle of" from search works too!</small></p>
                        </div>
                        <div class="button-holder">
                            <button class="button">Search</button>
                        </div>
                    </form>
                    <div id="battle-search-results" class="search-results"></div>
                </div>
            </section>
        </aside>
        <%- include('./partials/common-scripts') %>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js" integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA==" crossorigin=""></script>
        <script src="/scripts/article-preview.js"></script>
        <script src="/scripts/leaflet.js"></script>
        <script src="/scripts/map.js"></script>
    </body>
</html>